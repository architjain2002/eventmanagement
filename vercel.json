{
  "version": 2,
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "./backend/app.js"
    },
    {
      "src": ".*",
      "dest": "./frontend/rievera-app/build/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    }
  ],
  "builds": [
    {
      "src": "./backend/app.js",
      "use": "@vercel/node",
      "config": {
        "command": "npm start"
      }
    },
    {
      "src": "./frontend/rievera-app/src/index.js",
      "use": "@vercel/node",
      "config": {
        "command": "npm run build",
        "output": "./frontend/rievera-app/build"
      }
    }
  ]
}