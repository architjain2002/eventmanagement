{
  "version": 2,
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "./backend/app.js"
    },
    {
      "src": ".*",
      "dest": "./frontend/rievera-app/build/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    }
  ],
  "builds": [
    {
      "src": "./backend/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "./frontend/rievera-app/build",
      "use": "@vercel/static"
    }
  ]
}