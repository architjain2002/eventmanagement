{
  "version": 2,
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "backend/app.js"
    },
    {
      "src": ".*",
      "dest": "frontend/rievera-app/build/index.html",
      "headers": {
        "cache-control": "s-maxage=0"
      }
    }
  ],
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "command": "npm start"
      }
    },
    {
      "src": "frontend/rievera-app/package.json",
      "use": "@vercel/node",
      "config": {
        "command": "npm run build",
        "output": "frontend/rievera-app/build"
      }
    }
  ]
}